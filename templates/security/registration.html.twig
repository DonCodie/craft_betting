{% extends 'pages/homepage/homepage.html.twig' %}

{% block header %}
    <header class="header">
        <div class="header__user">
            <div class="header__user-connexion">
                <div class="header__user-popin header__user-popin-show">
                    {{ form_start(form_register, {'attr': {'class': 'form'}}) }}
                    <div class="form__content">
                        <div class="form__choices">
                            <a href="{{ path('security_login') }}">
                                <div class="form__choice form__choice-connexion">connexion</div>
                            </a>
                            <hr class="form__choice form__choice-hr">
                            <a href="{{ path('security_login') }}">
                                <div class="form__choice form__choice-create form__choice-active">cr√©er un compte</div>
                            </a>
                        </div>
                        <div class="form__item">
                            <label class="form__item-label" for="registration_username">pseudo ...</label>
                            {{ form_widget(form_register.username, {'attr': {'id': 'pseudo_register', 'class': 'form__item-input'}}) }}
                        </div>
                        <div class="form__item">
                            {% if not form_errors(form_register.email) %}
                                <label class="form__item-label" for="registration_email">email ...</label>
                            {% else %}
                                {{ form_errors(form_register.email) }}
                            {% endif %}
                            {{ form_widget(form_register.email, {'attr': {'id': 'email_register', 'class': 'form__item-input'}}) }}
                        </div>
                        {% if form_errors(form_register.password) %}
                            {{ form_errors(form_register.password) }}
                        {% endif %}
                        <div class="form__item">
                            {% if not form_errors(form_register.password) %}
                                <label class="form__item-label" for="registration_password">mot de passe ...</label>
                            {% endif %}
                            {{ form_widget(form_register.password, {'attr': {'class': 'form__item-input'}}) }}
                            <div class="form__item-password">
                                <img src="{{ asset('build/header/eye.png') }}" alt="eye">
                            </div>
                        </div>
                        {% if form_errors(form_register.confirm_password) %}
                            {{ form_errors(form_register.confirm_password) }}
                        {% endif %}
                        <div class="form__item">
                            {% if not form_errors(form_register.confirm_password) %}
                                <label class="form__item-label" for="registration_confirm_password">confirmer...</label>
                            {% endif %}
                            {{ form_widget(form_register.confirm_password, {'attr': {'class': 'form__item-input'}}) }}
                            <div class="form__item-password">
                                <img src="{{ asset('build/header/eye.png') }}" alt="eye">
                            </div>
                        </div>
                        <div class="form__item form__submit">
                            <input class="form__item-submit" type="submit" value="valider">
                        </div>
                    </div>
                    {{ form_end(form_register) }}
                </div>
                <div class="header__user-connexion-logo" id="logo">
                    <img src="{{ asset('build/header/user-default.png') }}"
                         alt="user"
                         class="header__user-connexion-logo-img">
                </div>
                <div class="header__user-connexion-infos">
                    350 parieurs inscrits
                </div>
            </div>
        </div>
        <div class="header__banner">
            <div class="header__banner--img-div"></div>
        </div>
    </header>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('form') }}
{% endblock %}


